<p id="notice"><%= notice %></p>

<%= link_to "Sign Out", destroy_current_member_session_path %>
<%= current_current_member.name %>

<center><h1>Current Members</h1></center>

<center>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin Status</th>
      <th>Alumni Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</center>

<center>
  <tbody>
    <% @current_members.each do |current_member| %>
      <tr>
        <td><%= current_member.name %></td>
        <td><%= current_member.email %></td>
        <td><%= current_member.isAdmin %></td>
        <td><%= current_member.isAlumni %></td>
        <td><%= link_to 'View Member Info', current_member %></td>
        <% if current_current_member.isAdmin %>
          <td><%= link_to 'Update Member Info', edit_current_member_path(current_member) %></td>
          <td><%= link_to 'Remove Member', current_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</center>

<% if current_current_member.isAdmin %>
  <br>
  <center>
  <%= link_to 
    <a class="c-button c-button_maroon-ghost-reverse">
    Add New Member
    </a>, 
  new_current_member_path %>
  </center>

<% end %>

<br>

<center>
<%= link_to 
  <a class="c-button c-button_maroon-ghost-reverse">
  View Member Organizations
  </a>, 
member_orgs_path %>
</center>

<br>

<center>
<%= link_to 'Add Organization Info', new_member_org_path %>
</center>

<br>

<center>
<%= link_to 'View Speakers', speakers_path %>
</center>