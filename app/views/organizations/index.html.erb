<p id="notice"><%= notice %></p>

<h1>Organizations</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :organizationID, "Organization ID", default_order: :asc) %></th>
      <th><%= sort_link(@q, :name, "Organization Name", default_order: :asc) %></th>
      <th><%= sort_link(@q, :email, "Organization Email", default_order: :asc) %></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.organizationID %></td>
        <td><%= organization.name %></td>
        <td><%= organization.email %></td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

